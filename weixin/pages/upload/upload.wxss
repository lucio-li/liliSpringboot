.timeTip {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 20rpx 0;
  background: white;
}
.timeTipLeft {
  margin-left: 25rpx; 
}
.timeTipRight {
  float: right;
  margin-right: 25rpx; 
}
.locationTip {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 350rpx;
  background: white;
}
.locationTipLeft {
  margin-left: 25rpx; 
}
.locationTipRight {
